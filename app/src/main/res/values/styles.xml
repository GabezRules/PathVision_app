<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimaryLight</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>

        <!-- Material Dialog theme -->
        <item name="material_dialog_background">#FFFFFF</item>
        <item name="material_dialog_title_text_color">#2d2d2d</item>
        <item name="material_dialog_message_text_color">#5F5F5F</item>
        <item name="material_dialog_positive_button_color">@color/colorPrimary</item>
        <item name="material_dialog_positive_button_text_color">#FFFFFF</item>
        <item name="material_dialog_negative_button_text_color">@color/colorPrimary</item>

    </style>

    <style name="SearchBarTheme" parent="Widget.Design.TextInputLayout">
        <item name="hintAnimationEnabled">true</item>
        <item name="android:hint">@string/search_by_keyword</item>
        <item name="endIconMode">clear_text</item>
        <item name="boxBackgroundMode">filled</item>
        <item name="boxBackgroundColor">@android:color/white</item>
        <item name="backgroundColor">@android:color/white</item>
        <item name="boxCornerRadiusBottomEnd">10dp</item>
        <item name="boxCornerRadiusBottomStart">10dp</item>
        <item name="boxCornerRadiusTopEnd">10dp</item>
        <item name="boxCornerRadiusTopStart">10dp</item>
    </style>

    <style name="AuthenticationInputTheme" parent="Widget.Design.TextInputLayout">
        <item name="hintAnimationEnabled">true</item>
        <item name="boxBackgroundMode">filled</item>
        <item name="boxBackgroundColor">@android:color/white</item>
        <item name="backgroundColor">@android:color/white</item>
        <item name="boxCornerRadiusBottomEnd">10dp</item>
        <item name="boxCornerRadiusBottomStart">10dp</item>
        <item name="boxCornerRadiusTopEnd">10dp</item>
        <item name="boxCornerRadiusTopStart">10dp</item>
    </style>

    <style name="EditTextTheme" parent="Widget.AppCompat.EditText">
        <item name="android:nestedScrollingEnabled" tools:targetApi="lollipop">true</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="background">@null</item>
    </style>

    <style name="SettingsTextDescription">
        <item name="android:textSize">20sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
    </style>



</resources>